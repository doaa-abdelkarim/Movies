<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="video"
            type="com.example.movies.domain.entities.BaseVideo" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@color/gray_700"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/image_view_clip_thumbnail"
            imageURL="@{video.posterUri}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="@string/clip_thumbnail"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="@dimen/ratio_1point3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_view_title"
            style="@style/Size16White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:text="@{video.title}"
            android:textSize="@dimen/favorite_video_title"
            app:layout_constraintBottom_toBottomOf="@id/image_view_clip_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/image_view_clip_thumbnail"
            app:layout_constraintTop_toTopOf="@id/image_view_clip_thumbnail"
            tools:text="favorite_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>