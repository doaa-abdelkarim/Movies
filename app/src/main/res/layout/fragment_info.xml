<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="detailsViewModel"
            type="com.example.movies.presentation.details.parent.DetailsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_700"
            android:padding="@dimen/spacing_normal"
            tools:context=".ui.home.movies.MoviesFragment">

            <TextView
                android:id="@+id/text_view_overview"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{detailsViewModel.movie.overview}"
                tools:text="@string/overview" />

            <TextView
                android:id="@+id/text_view_genres_title"
                style="@style/BoldSize16VeryDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_overview"
                android:text="@string/genres" />

            <TextView
                android:id="@+id/text_view_genres"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_overview"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/text_view_genres_title"
                android:text="@{detailsViewModel.movie.genres}"
                tools:text="@string/genres" />

            <TextView
                android:id="@+id/text_view_released_title"
                style="@style/BoldSize16VeryDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_genres"
                android:text="@string/released" />

            <TextView
                android:id="@+id/text_view_released"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_genres"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/text_view_released_title"
                android:text="@{detailsViewModel.movie.releaseDate}"
                tools:text="@string/released" />

            <TextView
                android:id="@+id/text_view_original_title_title"
                style="@style/BoldSize16VeryDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_released"
                android:text="@string/original_title" />

            <TextView
                android:id="@+id/text_view_original_title"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_released"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/text_view_original_title_title"
                android:text="@{detailsViewModel.movie.originalTitle}"
                tools:text="@string/original_title" />

            <TextView
                android:id="@+id/text_view_original_language_title"
                style="@style/BoldSize16VeryDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_original_title"
                android:text="@string/original_language" />

            <TextView
                android:id="@+id/text_view_original_language"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_original_title"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/text_view_original_language_title"
                android:text="@{detailsViewModel.movie.originalLanguage}"
                tools:text="@string/original_language" />

            <TextView
                android:id="@+id/text_view_popularity_title"
                style="@style/BoldSize16VeryDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_original_language"
                android:text="@string/popularity" />

            <TextView
                android:id="@+id/text_view_popularity"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_original_language"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/text_view_popularity_title"
                android:text="@{String.valueOf(detailsViewModel.movie.popularity)}"
                tools:text="@string/popularity" />

            <TextView
                android:id="@+id/text_view_revenue_title"
                style="@style/BoldSize16VeryDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_popularity"
                android:text="@string/revenue"
                android:visibility="@{(detailsViewModel.movie.isMovie == true)? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/text_view_revenue"
                style="@style/RegularSize14LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_popularity"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/text_view_revenue_title"
                android:text="@{(detailsViewModel.movie.isMovie == true)? String.valueOf(detailsViewModel.movie.revenue) : ``}"
                android:visibility="@{(detailsViewModel.movie.isMovie == true)? View.VISIBLE : View.GONE}"
                tools:text="@string/revenue" />

        </RelativeLayout>
    </ScrollView>
</layout>