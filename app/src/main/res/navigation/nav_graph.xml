<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.movies.presentation.home.parent.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.movies.presentation.details.parent.DetailsFragment"
        android:label="">
        <argument
            android:name="video"
            app:argType="com.example.movies.domain.entities.Video"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailsFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.example.movies.presentation.videoplayer.VideoPlayerFragment"
        android:label=""
        tools:layout="@layout/fragment_video_player">
        <argument
            android:name="clipKey"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.movies.presentation.home.children.movies.MoviesFragment"
        android:label="MoviesFragment" />
    <fragment
        android:id="@+id/tvShowsFragment"
        android:name="com.example.movies.presentation.home.children.tvshows.TVShowsFragment"
        android:label="TVShowsFragment" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.movies.presentation.home.children.favorites.FavoritesFragment"
        android:label="Favorites" />
</navigation>