<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- CodeReview it's better to use more generic names for style name that actually describe the style instead of using the view name, this way it will be easier to be reused -->
    <style name="videoTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabLayout">
        <item name="android:background">@color/darker_gray</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/tab_text_color</item>
        <item name="tabIndicatorColor">@color/teal_700</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="infoTitle">
        <item name="android:textColor">@color/text_info_title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="infoValue">
        <item name="android:textColor">@color/text_info_value_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="clipTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="reviewUserName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>