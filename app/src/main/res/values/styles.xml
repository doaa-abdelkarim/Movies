<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldSize16" parent="Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldSize16VeryDarkGray" parent="BoldSize16">
        <item name="android:textColor">@color/very_dark_gray</item>
    </style>

    <style name="BoldSize20" parent="Bold">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="BoldSize20White" parent="BoldSize20">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegularSize14" parent="Regular">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="RegularSize14LightGray" parent="RegularSize14">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="RegularSize14White" parent="RegularSize14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegularSize16" parent="Regular">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="RegularSize16VeryDarkGray" parent="RegularSize16">
        <item name="android:textColor">@color/very_dark_gray</item>
    </style>

    <style name="RegularSize16White" parent="RegularSize16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegularSize18" parent="Regular">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="RegularSize18White" parent="RegularSize18">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegularSize20" parent="Regular">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="RegularSize20White" parent="RegularSize20">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainTabLayoutStyle">
        <item name="android:background">@color/darker_gray</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/dark_grayish_red</item>
        <item name="tabIndicatorColor">@color/teal_700</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

</resources>