<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Size14">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="Size16">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Size18">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="Size20">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="Size14LightGray" parent="Size14">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="Size16VeryDarkGray" parent="Size16">
        <item name="android:textColor">@color/very_dark_gray</item>
    </style>

    <style name="Size16White" parent="Size16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldSize16VeryDarkGray" parent="Size16VeryDarkGray">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Size18White" parent="Size18">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Size20White" parent="Size20">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Size20WhiteBold" parent="Size20White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTabLayoutStyle">
        <item name="android:background">@color/darker_gray</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/dark_grayish_red</item>
        <item name="tabIndicatorColor">@color/teal_700</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

</resources>